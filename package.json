{
  "name": "invoice-flow-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=server\" \"npm run dev --workspace=client\"",
    "build": "npm run build --workspaces",
    "start": "concurrently --kill-others \"cd server && PORT=5000 npm start\" \"cd client && npm start\""
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
  },
  "engines": {
    "node": ">=20.9.0"
  }
}
